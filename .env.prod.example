# .env.prod.example
# Production Environment (Values will be injected via CI/CD)

# Application Environment
APP_ENV="prod"

# PostgreSQL (Production DB)
DATABASE_URL="postgresql://prod_user:prod_password@prod-db-host:5432/prod_db"

# JWT (Use a strong, randomly generated key)
SECRET_KEY="generate_a_very_strong_and_long_random_secret_key_for_prod"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# Firebase Admin SDK (This will be handled by the entrypoint script from a GitHub Secret)
# The application will look for the key at a predefined path inside the container.
FIREBASE_SERVICE_ACCOUNT_KEY_PATH="/tmp/firebase_service_account.json"

# API V1
API_V1_STR="/api/v1"